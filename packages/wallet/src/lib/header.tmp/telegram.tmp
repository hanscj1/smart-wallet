<!-- Place this code where you want the Telegram share button to appear -->
<div id="telegram-btn"></div>

<!-- Replace "YOUR_TELEGRAM_BOT_USERNAME" with the username of your Telegram bot -->
<!-- Replace "YOUR_SHARE_URL" with the URL you want to share -->
<script async src="https://telegram.org/js/telegram-widget.js?7" data-telegram-share-url="YOUR_SHARE_URL" data-telegram-bot="YOUR_TELEGRAM_BOT_USERNAME"></script>

<!-- Replace "YOUR_BUTTON_IMAGE_URL" with the URL of your button image -->
<script type="text/javascript">
  // Initialize the Telegram share button
  function initTelegramButton() {
    var buttonHtml = '<a href="https://t.me/share/url?url=YOUR_SHARE_URL" target="_blank"><img src="YOUR_BUTTON_IMAGE_URL" alt="Share on Telegram"></a>';
    document.getElementById('telegram-btn').innerHTML = buttonHtml;
  }

  // Call the initTelegramButton function once the page is loaded
  window.onload = function() {
    initTelegramButton();
  };
</script>
